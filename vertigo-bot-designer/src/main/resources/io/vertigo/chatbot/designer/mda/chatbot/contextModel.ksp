create Association AContextEnvironmentValueTypeOperator {
	fkFieldName : "tyopCd"

 	dtDefinitionA : DtContextEnvironmentValue
	type : "*>1"
	dtDefinitionB : DtTypeOperator

	labelB : "Value operator"
}

