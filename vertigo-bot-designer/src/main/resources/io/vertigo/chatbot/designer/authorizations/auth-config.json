{
	"globalAuthorizations": [{
		"name": "AdmPer",
		"label": "Person administrator"
	},
	{
		"name": "AdmBot",
		"label": "Bot administrator"
	},
	{
		"__comment": "Create or view all bots.",
		"name": "SuperAdmBot",
		"label": "Bots super administrator"
	}],
	"securedEntities": [
	{
		"entity": "Chatbot",
		"securityFields" : ["botId"],
		"securityDimensions": [],
		"operations": [  {
			"__comment": "Visibilité si affecté à l'utilisateur'.",
			"name": "read", "label" : "Lecture",
			"rules": [
				"botId=${botId}"
			]
		},{
			"__comment": "Modification si affecté à l'utilisateur.",
			"name": "write", "label" : "Modification",
			"rules": [
				"botId=${botModif}"
			]
		},
		{
			"__comment": "auth visiteur",
			"name": "visiteur", "label" : "Accès visiteur",
			"grants": ["read"],
			"rules": [
				"botId=${botVisiteur}"
			]
		},
		{
			"__comment": "auth contributeur",
			"name": "contributeur", "label" : "Accès contributeur",
			"grants": ["visiteur"],
			"rules": [
				"botId=${botContributeur}"
			]
		},
		{
			"__comment": "auth admFct",
			"name": "admFct", "label" : "Accès admFct",
			"grants": ["contributeur"],
			"rules": [
				"botId=${botAdmFct}"
			]
		},
		{
			"__comment": "Visibilité globale pour le super admin. Sans régles = toujours ok.",
			"name": "admin", "label" : "Accès super admin",
			"overrides": ["read", "write", "visiteur", "contributeur", "admFct"],
			"rules": ["true"]
		}]
	}]
}